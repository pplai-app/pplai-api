# Environment
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/pplai_dev

# JWT
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Frontend
FRONTEND_URL=http://localhost:8080
CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# Google Cloud Storage (optional - uses local storage if not set)
GCS_BUCKET_NAME=
# Note: Uses Application Default Credentials in GCP
# For local: gcloud auth application-default login

# Server
PORT=8000

# Redis (optional - caching disabled if not configured)
REDIS_URL=redis://localhost:6379/0
# Or use individual settings:
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# Google Cloud Platform Configuration
GCP_PROJECT_ID=
GCP_REGION=us-central1
GCP_SERVICE_NAME=pplai-api
GCP_REVISION_NAME=default

# Google Cloud Services (auto-enabled in GCP, can disable for local)
USE_GCP_LOGGING=true
USE_GCP_MONITORING=true
